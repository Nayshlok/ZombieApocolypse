<Window x:Class="TitleMenu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zombie Apocolipse Title Screen" Height="481" Width="725" ResizeMode="NoResize">
    <Grid>
        <Image Source="Images/Zombie_1.jpg"/>

        <UniformGrid Columns="2">
            <StackPanel>
                <Button x:Name="NewGame" Content="New Game" 
                        Width="150" Height="40"
                        Margin="0, 100, 0, 0"
                        Foreground="DarkRed"
                        Background="SlateGray"
                        FontSize="20" Click="NewGame_Click"/>
                <Button x:Name="LoadGame" Content="Load Game"
                        Width="150" Height="40"
                        Margin="0, 150, 0, 0"
                        Foreground="DarkRed"
                        Background="SlateGray"
                        FontSize="20" Click="LoadGame_Click"/>
            </StackPanel>

            <StackPanel>

                <Button x:Name="Quit" Content="Quit" 
                        Width="130" Height="40"
                        Margin="-50, 235, 50, 0"
                        Foreground="DarkRed"
                        Background="SlateGray"
                        FontSize="20" Click="Quit_Click"/>
            </StackPanel>
        </UniformGrid>
    </Grid>
</Window>
